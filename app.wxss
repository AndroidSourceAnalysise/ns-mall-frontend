/**app.wxss**/
page {
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background-color: #009999;
  color: #757575;
}
view, text, image, input, button {
  box-sizing: border-box;
}
view {
  width: 100%;
  box-sizing: border-box;
}
.container {
  height: 100%;
  box-sizing: border-box;
}
.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.vertical-top {
  vertical-align: top;
}
.common-border-bottom {
  border-bottom: 1rpx solid #009999;
}
.ns-button {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 56rpx;
  border: 1px solid #676767;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #676767;
}
/* =======筛选栏统一样式begin======= */
.filter-area {
  display: flex;
  background-color: #fff;
}
.filter-area text {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}
.active-filter {
  color: #009999;
}
/* =======筛选栏统一样式end======= */

/* =======数量加减器样式begin======= */
.ns-counter {
  width: auto;
  height: 50rpx;
  line-height: 48rpx;
  border: 1px solid #b5b4b4;
  border-radius: 6rpx;
  font-size: 25rpx;
  color: #321600;
  text-align: center;
}
.ns-counter-symbol, .ns-counter-num {
  display: inline-block;
  vertical-align: top;
}
.ns-counter-symbol {
  width: 80rpx;
}
.ns-counter-num {
  min-width: 60rpx;
  padding: 0 10rpx;
  border: 1px solid #b5b4b4;
  border-top: 0;
  border-bottom: 0;
  box-sizing: border-box;
}
/* =======数量加减器样式end======= */

/* =======页面区块公共样式begin======= */
.common-block-style {
  margin: 4rpx 0;
  padding: 32rpx 40rpx;
  line-height: 1;
  background-color: #fff;
  color: #0b0707;
}
/* =======页面区块公共样式end======= */