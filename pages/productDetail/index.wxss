/* pages/productDetail/index.wxss */

.slide-img {
    width: 100%;
    height: 425rpx;
}

.product-info {
    position: relative;
}

.product-img {
    width: 100%;
    height: 420rpx;
    border: 1px solid #999;
}

.common-style {
    margin: 4rpx 0;
    padding: 32rpx 40rpx;
    line-height: 1;
    background-color: #fff;
}

.product-info {
    font-size: 32rpx;
}

.product-name {
    color: #090808;
}

.product-desc {
    margin: 16rpx 0 30rpx;
}

.product-price {
    font-size: 37.5rpx;
    color: #fa0808;
}

.shopping-counter {
    position: absolute;
    top: 32rpx;
    right: 40rpx;
}

.product-statisc text {
    margin-right: 140rpx;
}

.product-statisc text:last-child {
    margin-right: 0;
}

.coupons {
    color: #000;
}

.right-arrow {
    position: absolute;
    right: 0;
    top: 0;
}

.service-item {
    line-height: 40rpx;
}

.product-comment-area {
    padding-top: 80rpx;
    padding-bottom: 120rpx;
    color: #000;
}

.comment-statis {
    position: relative;
    margin-bottom: 68rpx;
}

.see-all-comment {
    position: absolute;
    right: 0;
    top: 0;
    color: #f33;
}

.comment-tags {
    margin-bottom: 40rpx;
}

.comment-tag {
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 30rpx;
    margin-right: 40rpx;
    margin-bottom: 26rpx;
    border-radius: 18rpx;
    background-color: #fcc;
    text-align: center;
}

.comment-tag:last-child {
    margin-right: 0;
}

.comment-item {
    margin-bottom: 30rpx;
    color: #999;
}

.last-comment-item {
    margin-bottom: 0;
    padding-bottom: 80rpx;
}

.commentator-img {
    width: 76rpx;
    height: 76rpx;
    border: 1px solid #aac4bf;
    border-radius: 50%;
}

.comment-item-detail {
    display: inline-block;
    width: 420rpx;
    margin-left: 50rpx;
    vertical-align: top;
}

.comment-content {
    line-height: 1.2;
    margin: 16rpx 0;
    color: #000;
}

.comment-img {
    width: 76rpx;
    height: 76rpx;
    margin-right: 14rpx;
    margin-bottom: 16rpx;
}

.comment-img:last-child {
    margin-right: 0;
}

.operate-btns-wrap {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 120rpx;
    line-height: 120rpx;
    padding: 0 20rpx;
    font-size: 40rpx;
    color: #fff;
    text-align: center;
}

.buy-btn, .add-cart-btn {
    display: inline-block;
    width: 50%;
}

.buy-btn {
    background-color: #eabc98;
}

.add-cart-btn {
    background-color: #cd363d;
}

.relative {
    position: relative;
}
