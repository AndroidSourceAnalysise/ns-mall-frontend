/* pages/orderConfirm/index.wxss */
.order-confirm {
  padding-bottom: 90rpx;
}
.distribution-info {
  position: relative;
  padding-top: 28rpx;
  padding-bottom: 20rpx;
}
.distribution-phone {
  position: absolute;
  right: 40rpx;
}
.distribution-address {
  line-height: 40rpx;
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #7b8180;
}
.right-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0, -50%);
}
.product-info-wrap {
  line-height: 1;
  font-size: 32rpx;
}
.product-img {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #999;
  border-radius: 8rpx;
}
.product-other-info {
  display: inline-block;
  width: 420rpx;
  margin-left: 40rpx;
  vertical-align: top;
}
.product-name {
  color: #321600;
}
.product-desc {
  display: block;
  margin: 26rpx 0 34rpx;
  color: #757575;
}
.product-price {
  display: inline-block;
  width: 130rpx;
  margin-right: 60rpx;
}
.relative {
  position: relative;
}
.shopping-counter {
  display: inline-block;
}
.message-input {
  display: inline-block;
  width: 500rpx;
  padding-left: 10rpx;
  border: 1px solid #999;
  vertical-align: middle;
}
.radio-group {
  margin-top: 20rpx;
}
.block-desc-text {
  margin-top: 20rpx;
}
.red-text {
  color: #cd363d;
}
.order-amount {
  margin-left: 60rpx;
}
.operate-btns-wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  font-size: 36rpx;
}
.order-payment {
  display: block;
  width: 100%;
  padding-left: 32rpx;
  box-sizing: border-box;
  background-color: #e0d8d3;
  color: #545151;
}
.add-cart-btn {
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 220rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #cd363d;
  text-align: center;
}
/*选择优惠券弹框样式*/
.coupon-item {
  padding: 16rpx 0;
  margin: 13rpx 0;
  color: #cc3333;
  background-color: #fff;
}
.coupon-item-radio {
  display: inline-block;
  margin-right: 10rpx;
}
.coupon-name-wrap, .coupon-info, .operate-btn {
  display: inline-block;
  vertical-align: top;
}
.coupon-name-wrap {
  width: 176rpx;
}
.coupon-type {
  padding: 8rpx 25rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: #cd363b;
}
.coupon-name {
  display: block;
  padding-left: 40rpx;
  margin-top: 25rpx;
  font-size: 45rpx;
}
.unit {
  font-size: 30rpx;
}
.coupon-info {
  width: 440rpx;
  margin: 24rpx 30rpx 0 0;
}
.coupon-discount, .term-valid {
  display: block;
  line-height: 40rpx;
  margin-top: 16rpx;
}
.coupon-discount {
  font-size: 32rpx;
}
.term-valid {
  font-size: 26rpx;
}
/* 选择地址弹框样式 */
.address-item {
  display: inline-block;
  padding: 60rpx 0 0;
  color: #000;
}
.address-item-info {
  position: relative;
  display: inline-block;
  width: 90%;
  vertical-align: top;
}
.address-phone {
  position: absolute;
  right: 20rpx;
  top: 0;
}
.address-detail-item {
  margin: 20rpx 0;
  font-size: 30rpx;
}
/* 选择地址弹框样式 */