<!--pages/payResult/index.wxml-->
<view class="container pay-result">
  <view class="pay-info common-block-style">
    <icon type="{{order.payStatus}}" size="70"/>
    <view class="pay-status-text">{{order.payStatusText}}</view>
    <view class="other-text" wx:if="{{order.payStatus === 'success'}}">获得{{order.self_integral}}积分，积分后续可抵扣或购买其他商品哦，敬请期待~</view>
    <text class="ns-button shopping-btn" bindtap="goHome" wx:if="{{order.payStatus === 'success'}}">继续购物</text>
    <text class="ns-button shopping-btn" bindtap="goOrderConfirm" wx:else>重试</text>
  </view>
  <view class="order-info common-block-style">
    <view class="order-info-item">订单金额<text class="order-info-val">{{order.order_total}}元</text></view>
    <view class="order-info-item">支付时间<text class="order-info-val">{{order.create_dt}}</text></view>
    <view class="order-info-item">订单编号<text class="order-info-val">{{order.id}}</text></view>
    <view class="order-info-item">收货地址<text class="order-info-val">{{order.addressDetail}}  {{order.recipients}}  {{order.mobile}}</text></view>
  </view>
</view>
