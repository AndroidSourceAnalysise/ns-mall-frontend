/* pages/rankIntegral/index.wxss */
.integral-rank {
  background-color: #fff;
  overflow-y: auto;
}
.title-area {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
}
.title-area text {
  display: inline-block;
  width: 40%;
}
.rank-list {
  padding: 0 40rpx;
}
.rank-item {
  display: flex;
  margin: 20rpx 0;
}
.rank-member, .rank-num-wrap, .promotion-money {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
}
.rank-member, .promotion-money {
  width: 40%;
}
.rank-list .rank-num-wrap {
  width: 20%;
  text-align: right;
}
.member-img {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.member-name {
  display: inline-block;
  margin-left: 40rpx;
  vertical-align: middle;
}
.rank-num {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50%;
  font-size: 24rpx;
  color: #fff;
  background-color: #cd8879;
  text-align: center;
}
.top-rank-num {
  background-color: #c13e43;
}
.ac {
  text-align: center;
}
.title-area .ar {
  width: 20%;
  text-align: right;
}