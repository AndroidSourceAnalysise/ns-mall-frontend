/* pages/editUserInfo/index.wxss */
.modify-user-info {
  padding-bottom: 40rpx;
  background-color: #fff;
}
.modify-item {
  position: relative;
  height: 121rpx;
  line-height: 120rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #81cfcc;
  font-size: 32rpx;
  color: #000;
}
.modify-item text {
  display: inline-block;
  width: 180rpx;
  vertical-align: middle;
}
.modify-item .input-item {
  display: inline-block;
  width: 460rpx;
  vertical-align: middle;
}
.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.avatar-btn {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}
.code-btn {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    z-index: 10;
}