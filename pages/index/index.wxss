/**index.wxss**/
.slide-img {
  width: 100%;
  height: 425rpx;
}
.product-list {
  padding: 20rpx 40rpx;
  margin-top: 34rpx;
  background-color: #fff;
}
.product-item {
  display: inline-block;
  width: 300rpx;
  margin-bottom: 26rpx;
  margin-right: 40rpx;
  vertical-align: middle;
  text-align: center;
}
.product-item-name {
  line-height: 38rpx;
  font-size: 32rpx;
  color: #000;
  text-align: center;
}
.product-item-img {
  display: block;
  width: 100%;
  height: 320rpx;
  margin: 8rpx 0 12rpx;
}
.buy-btn {
  width: auto;
  border: 0;
  color: #fff;
  background-color: #27aaa4;
}
.mr0 {
  margin-right: 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}