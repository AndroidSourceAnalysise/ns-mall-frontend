/* pages/adress/index.wxss */
.address {
  padding-bottom: 40rpx;
  background-color: #fff;
}
.address-item {
  padding: 60rpx 0 0;
  color: #000;
}
.relative, .address-detail-item, .address-operate-item {
  padding: 0 40rpx;
}
.relative {
  position: relative;
  font-size: 32rpx;
}
.address-phone {
  position: absolute;
  right: 20rpx;
  top: 0;
}
.address-detail-item {
  margin: 60rpx 0 40rpx;
  font-size: 30rpx;
}
.address-operate-item {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #019e97;
  border-left: 0;
  border-right: 0;
}
.operate-wrap {
  position: absolute;
  right: 40rpx;
  top: 50%;
  width: auto;
  line-height: 1;
  margin-top: -30rpx;
}
.operate-btn-item {
  display: inline-block;
  width: auto;
  margin-left: 20rpx;
}
.operate-img {
  height: 60rpx;
  vertical-align: middle;
}
.edit-img {
  width: 55rpx;
}
.delete-img {
  width: 70rpx;
}
.section {
  position: relative;
  height: 121rpx;
  line-height: 120rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #81cfcc;
  font-size: 32rpx;
  color: #000;
}
.section text {
  display: inline-block;
  width: 180rpx;
  vertical-align: middle;
}
.section .input-item {
  display: inline-block;
  width: 460rpx;
  vertical-align: middle;
}
.selected-region {
  padding-right: 16rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.section .w200 {
  width: 200rpx;
}
.switch-btn {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -60rpx;
}
.valid-code-btn {
  position: absolute;
  top: 50%;
  right: 10rpx;
  z-index: 10;
  width: 240rpx;
  transform:translate(0,-100%);
  background-color: #339999;
}